<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/image_online_contacts"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/find_contacts"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/text_online_contacts"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_online_contacts"
            android:text="Not have contacts online"
            android:textSize="14sp"
            android:gravity="center"
            android:textStyle="bold"
            android:visibility="gone"
            />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOnlineContacts"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</FrameLayout>