<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageUser"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:src="@drawable/default_user_image"/>
            <ImageView
                android:id="@+id/statusUser"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/status_online"
                android:layout_gravity="bottom|end"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lorem_ipsum_title"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:ellipsize="end"/>

                <ImageView
                    android:id="@+id/muteImage"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_round_volume_off_24"
                    android:layout_marginLeft="8dp"
                    android:visibility="invisible"/>

            </LinearLayout>

            <TextView
                android:id="@+id/textMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lorem_ipsum_desc"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginRight="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/statusMessage"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/ic_round_done_all_24" />
                <!--ic_round_done_all_24.xml
                    ic_round_done_24
                    ic_round_restore_24.xml-->

                <TextView
                    android:id="@+id/timeMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20:20"
                    android:layout_gravity="center"
                    android:textSize="12sp"/>

            </LinearLayout>



                <TextView
                    android:id="@+id/countMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="right"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:background="@drawable/count_messages"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>