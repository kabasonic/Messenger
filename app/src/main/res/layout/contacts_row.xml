<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageRowContacts"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/image_profile_test"
                android:layout_gravity="center"
                android:layout_centerInParent="true"/>

            <View
                android:id="@+id/statusUser"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="right|bottom"
                android:backgroundTint="@color/colorGreen"
                android:background="@drawable/status_online"/>

        </FrameLayout>


        <TextView
            android:id="@+id/titleRowContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:text="@string/lorem_ipsum_title"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"/>

        <ImageButton
            android:id="@+id/ibRowContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_round_more_vert_24"
            android:background="@null"
            android:tint="@color/colorBlack" />

    </LinearLayout>

</LinearLayout>